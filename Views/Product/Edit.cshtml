@* SETELAH DARI CONTROLLER *@

@using UITraining.Models.DB
@using UITraining.Models.DTO
@model Product


@{
    ViewData["Title"] = "Product";
}


<main id="main" class="main">

    <div class="pagetitle">
        <h1>Product</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Layouts</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Add New Product</h5>

                        <!-- Horizontal Form -->
                        @* asp-action="Edit" harus edit *@
                        <form asp-controller="Product" asp-action="Edit" method="post">
                            <div class="row mb-3" hidden>
                                <label for="Id" class="col-sm-2 col-form-label">Id</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="Id" asp-for="Id">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="Name" class="col-sm-2 col-form-label">Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="name" asp-for="Name">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="Stock" class="col-sm-2 col-form-label">Stock</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="text" asp-for="Stock">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="Description" class="col-sm-2 col-form-label">Description</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="description" asp-for="Description">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="Price" class="col-sm-2 col-form-label">Price</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="price" asp-for="Price">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="Supplier" class="col-sm-2 col-form-label">Supplier</label>
                                <div class="col-sm-10">
                                    <select class="form-control" asp-for="IdSupplier" asp-items="ViewBag.Supplier">
                                        <option value="">-- Pilih Supplier --</option>
                                    </select>

                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Status</label>
                                <div class="col-sm-10">
                                    <select asp-for="ProductStatus" class="form-select" aria-label="Default select example">
                                        <option value=0>published</option>
                                        <option value=1>unpublished</option>
                                    </select>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Save Data</button>
                                <a href="@Url.Action("Index","Product")" class="btn btn-info">Cancel</a>
                            </div>
                        </form><!-- End Horizontal Form -->

                    </div>
                </div>
            </div>
        </div>
    </section>

</main><!-- End #main -->